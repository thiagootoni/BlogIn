@using PWABlog.ViewModels.Admin
@model PWABlog.ViewModels.Admin.AdminEtiquetasCriarViewModel

<div class="card">
	<div class="card-header">
		<h3 class="card-title"> Nova Etiqueta</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
		</div>
	</div>

	<div class="card-body">
		@if (@Model.Erro != null)
		{
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
				<h5><i class="icon fas fa-ban"></i> Erro!</h5>
				@Model.Erro
			</div>
		}

		<form action="/admin/etiquetas/criar" method="post">
			<div class="form-group mb-3">
				<label for="nome">Nome</label>
				<input id="nome" name="nome" type="text" class="form-control">
			</div>


			<div class="form-group mb-3">
				<label for="IdCategoria">Categoria</label>
				<select id="IdCategoria" name="IdCategoria" type="number" class="form-control">
					<option value="">Selesione</option>
					@foreach (CategoriaAdminEtiquetas categoria in Model.Categorias)
					{
						<option value="@categoria.IdCategoria">@categoria.NomeCategoria</option>
					}
				</select>
			</div>

			<div class="form-group mb-3">
				<button type="submit" class="btn btn-primary btn-block">Criar</button>
				<a class="mt-3" href="/admin/etiquetas">Cancelar</a>
			</div>

		</form>

	</div>

</div>

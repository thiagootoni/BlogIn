@using PWABlog.ViewModels.Admin
@model PWABlog.ViewModels.Admin.AdminPostagensListarViewModel
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Listagem de Postagem</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <a class="btn btn-primary mb-3" href="/admin/postagens/criar">Criar nova Postagem</a>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Autor</th>
                <th>Categoria</th>
                <th>Data de Exibição</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (PostagemAdminPostagens postagem in @Model.Postagens)
            {
                <tr>
                    <td>@postagem.Id</td>
                    <td>@postagem.Titulo</td>
                    <td>@postagem.NomeAutor</td>
                    <td>@postagem.Categoria</td>
                    <td>@postagem.DataExibição.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-default btn-xs" href="/admin/postagens/editar/@postagem.Id">Editar</a>
                        <a class="btn btn-danger btn-xs" href="/admin/postagens/remover/@postagem.Id">Remover</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>